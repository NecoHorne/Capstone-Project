<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.necohorne.gymapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.Activities.LoginActivity" />
        <activity android:name=".UI.Activities.RegisterNewAccount" />
        <activity
            android:name=".UI.Activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.Activities.AddProgramActivity"
            android:parentActivityName=".UI.Activities.MainActivity"></activity>
        <activity android:name=".UI.Activities.DetailExerciseActivity"></activity>
        <activity android:name=".UI.Activities.MeasureActivity"
            android:parentActivityName=".UI.Activities.MainActivity"></activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a412612b25f3adcab0d0a7642283c2c1c6881c87" />

        <activity android:name=".UI.Activities.UserActivity"
            android:parentActivityName=".UI.Activities.MainActivity">
        </activity>
    </application>

</manifest>